---
import { firstName, lastName } from '@/constants';
---

<header>
  <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2550 380" role="heading" aria-level="1">
    <text x="49%" y="100%">{firstName}</text>
    <text x="49%" y="300%">{lastName}</text>
  </svg>
</header>

<style>
  @property --hue {
    syntax: '<angle>';
    initial-value: 0.75turn;
    inherits: false;
  }

  @keyframes hue-cycle {
    to {
      --hue: 1.25turn;
    }
  }

  :root {
    --lightness: 55%;
    --chroma: 0.1;
  }

  header {
    width: 100vw;
    position: sticky;
    top: 0;
  }

  svg {
    width: 100%;
    overflow: visible;
    margin-bottom: var(--text-xl);
  }

  text {
    animation: hue-cycle 1s linear both;
    animation-timeline: scroll();
    font-family: var(--font-head);
    font-size: 800px;
    font-weight: 700;
    font-kerning: normal;
    letter-spacing: -35px;
    text-transform: uppercase;
    fill: var(--color-light);
    text-shadow:
      10px 10px 1px var(--color-red),
      -10px -10px 1px var(--color-blue);
    text-anchor: middle;
    dominant-baseline: central;
    alignment-baseline: central;
  }
</style>
