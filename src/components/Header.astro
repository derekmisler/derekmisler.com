---
import { firstName } from '@/constants';
---

<header>
  <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2550 380" role="heading" aria-level="1">
    <text x="-1%" y="100%">I'm {firstName}</text>
  </svg>
</header>

<style>
  @property --hue {
    syntax: '<angle>';
    initial-value: 0turn;
    inherits: false;
  }

  @keyframes hue-cycle {
    to {
      --hue: 5turn;
    }
  }

  header {
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    flex-direction: column;
    padding: var(--text-sm);
  }

  svg {
    width: 100%;
    overflow: visible;
    margin: 0;
  }

  text {
    animation: hue-cycle 1s linear both;
    animation-timeline: scroll();
    font-family: var(--font-head);
    font-size: 550px;
    font-kerning: normal;
    font-weight: 100;
    line-height: var(--heading-line-height);
    animation: hue-cycle 1s linear both;
    animation-timeline: scroll();
    fill: oklch(85% 0.05 var(--hue));
  }
</style>
