---
import { firstName } from '@/constants';
---

<header class="fade-out">
  <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2550 380" role="heading" aria-level="1">
    <text x="-1%" y="100%">I'm {firstName}</text>
  </svg>
</header>

<style>
  @property --hue {
    syntax: '<angle>';
    initial-value: 0turn;
    inherits: false;
  }

  @keyframes hue-cycle {
    to {
      --hue: 2turn;
    }
  }

  header {
    justify-content: flex-end;
  }

  svg {
    width: 100%;
    overflow: visible;
    margin: 0;
  }

  text {
    font-family: var(--font-head);
    font-size: max(590px, 30vw);
    font-kerning: normal;
    font-weight: 100;
    letter-spacing: -2vw;
    line-height: var(--heading-line-height);
    fill: var(--color-dark);
  }
</style>
